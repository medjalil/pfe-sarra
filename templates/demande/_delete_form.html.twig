<div class="modal fade" id="deleteModal-{{ demande.id }}" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <form method="post" action="{{ path('app_demande_delete', {'id': demande.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Suppression</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Voulez-vous supprimer cet enregistrement?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal"><i
                                class="fas fa-times-circle"></i> Annuler
                    </button>
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                    <button class="btn btn-danger">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
