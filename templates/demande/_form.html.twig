{{ form_start(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.title) }}
    </div>
    <div class="col">
        {{ form_row(form.subCategory) }}
    </div>
    <div class="col">
        {{ form_row(form.budget) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.description) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.address) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.postalCode) }}
    </div>
    <div class="col">
        {{ form_row(form.city) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.startAt) }}
    </div>
    <div class="col">
        {{ form_row(form.endAt) }}
    </div>
    <div class="col">
        {{ form_row(form.limitAt) }}
    </div>
</div>
<button type="submit" class="btn btn-primary">{{ button_label|default('Publier la demande') }}</button>
{{ form_end(form) }}
