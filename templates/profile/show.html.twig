{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ profile.company }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ profile.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ profile.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ profile.city }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ profile.postalCode }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ profile.mobile }}</td>
            </tr>
            <tr>
                <th>VatId</th>
                <td>{{ profile.vatId }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ profile.type }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ profile.bio }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ profile.activity }}</td>
            </tr>
            <tr>
                <th>WebSite</th>
                <td>{{ profile.webSite }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ profile.createdAt ? profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_index') }}">back to list</a>

